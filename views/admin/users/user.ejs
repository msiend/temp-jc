                        <table>
                            <thead>
                                <tr>
                                    <th><input type="checkbox" name="checkbox" class="select-all"></th>
                                    <th class="">No.</th>
                                    <th class="">Name</th>
                                    <th class="">Contact Number</th>
                                    <th class="">Email</th>
                                    <th class="">Designation</th>
                                    <th class="">Password</th>
