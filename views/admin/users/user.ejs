                <div class="data-info flex">
                    <div class="data-stats">
                        <p class="title">Total Users</p>
                        <h2 class="data">1000</h2>
                    </div>
                    <div class="data-stats">
                        <p class="title">Active</p>
                        <h2 class="data">5</h2>
                    </div>
                    <div class="data-stats">
                        <p class="title">Inactive</p>
                        <h2 class="data">4</h2>
                    </div>
                </div>

                <hr>
                <!-- MAIN  -->
