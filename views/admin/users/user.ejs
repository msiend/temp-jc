<body>
    <section>
        <%- include ('../partials/aside.ejs') %>

        <div class="right">
            <!-- FIRST SLIDE  -->
            <div class="first-slide" id="first-slide">

                <!-- HEADER  -->
                <header>
                    <div class="header-text">
                        <h1 id="main-heading">Users</h1>
                        <p class="title">Find all <span id="main-title">user</span> details here</p>
                    </div>
                    <div class="header-btn">
                        <button class="btn-primary flex" type="button" onclick="addUser(this)">
