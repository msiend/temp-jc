                    <div class="main-text">
                        <h1>All Users</h1>
                    </div>

                    <div class="flex">
                        <div class="filter-options">
                            <button type="button" class="btn-filter active">All</button>
                            <button type="button" class="btn-filter">Active</button>
                            <button type="button" class="btn-filter">Inactive</button>
                        </div>
                        <div class="search flex align-center">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="search-icon"
                                class="svg-secondary">
                                <path
                                    d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z">
                                </path>
                            </svg>
                            <input type="text" id="searchQuery" oninput="search()" placeholder="Search">
                        </div>
                    </div>

